  <div style="margin-left: 10px;">
  Component Cost : 
  </div>
  
  <div style="margin-left: 5px; font-size: 14px;font-weight: 'bold';">
  {{component_cost}}
  </div>
  </div>
<br/>
<div style="display: flex;margin-left: 10px ; flex-direction: row;border: 2px;border-radius: 5px;border-style: solid;width: 400px;">
  <div style="margin-left: 10px;">
 Total Component Cost : 
  </div>
  
  <div style="margin-left: 5px; font-size: 14px;font-weight: 'bold';">
  {{component_cost}} * {{quentity}} = {{multiplay  component_cost quentity}}
  </div>
  </div>
{{/ifEquals}}

</div>
 {{/ifEquals}}
</div>
{{/arr}}








