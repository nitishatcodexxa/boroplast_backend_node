<body>
    <div class="container">
  <div class="header_flag">
<img src="https://admin.codexxa.co.in/img/img/logo.png"/>
  </div>  
<br/>



<div class="header_body">
    <div class="col_one">
<h6></h6>
<h6>Title : {{data.task_title}}</h6>
<h6>Address : {{data.task_address}}</h6>
<h6>Unit Name : {{data.unit_name}}</h6>
<h6>Corporate : {{data.corporate_name}}</h6>
    </div>

<div class="col_one">
<h6>Report Id : 0011254585</h6>
<h6>Exe. Date :  {{formatTime  data.task_execution_date "MM-DD-YYYY"}}</h6>
<h6>Completion Date : {{formatTime  data.task_end_date  "MM-DD-YYYY"}}</h6>
<h6>Attendant Name : {{data.task_assigned_user_name}}</h6>
  
</div>

</div>









{{#arr}}
<div class="border_add">
