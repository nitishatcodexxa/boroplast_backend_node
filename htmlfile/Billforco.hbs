    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>


<style>

.header_flag{
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    
}


.mm_oo{
    border: 70px;
    border-color: rgb(184, 48, 48);
    width:'100%';
   min-height: 100px;
}


.header_body{
    display: flex;
    flex-direction: row;
    justify-content: space-between;

}

.row_one{
    display: flex;
    flex-direction: column;
}

.description{
    display: flex;
    flex-direction: column;
    margin-top: 20px;
    margin-left: 10px;
}

h6{
    font-size: 14px;
    color: black;
}

h2{
    font-size: 16px;
    text-decoration: underline;
    margin-left: 10px;
}


.border_add{
    border: 1px;
    border-color: #ebebf5;
    border-radius: 10px;
    margin-top: 10px;
    border-style:solid;
}

.button_color{
  
}

