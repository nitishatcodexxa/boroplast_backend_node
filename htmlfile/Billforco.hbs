 <div style="padding: 2px;margin-left: 3px;margin-right: 3px;">
    ok
 </div>

</div>
</div>

    </div>
{{/ifEquals}}

{{#ifEquals is_resolved true}} 

 <div class="description">
<h6>Name : {{activity_name}}</h6>

{{#ifEquals is_repair true}} 

<div style="display: flex; flex-direction: row;" >  
  <div>
  Status :
  </div>
  
  <div style="background-color: rgba(26, 201, 20, 0.952); margin-left: 5px; color: antiquewhite; border: #ebebf5; border-radius: 5px; font-size: 14px;font-weight: bold; margin: 2px;">
   <div style="padding: 2px;margin-left: 3px;margin-right: 3px; color: rgba(255, 255, 255,1);">
      Resolved
   </div>
  
  </div>
  </div>
  
<h6>Action Perform : Repair</h6>
{{/ifEquals}}

{{#ifEquals is_replace true}}

<div style="display: flex; flex-direction: row;" >  
  <div>
  Status :
